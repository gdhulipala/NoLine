<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentSummaryActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#DD2C00"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transaction Summary"
            android:id="@+id/count_text"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="#DD2C00"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08 Oct 2017"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:id="@+id/current_date"
                android:fontFamily="sans-serif-condensed"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="08 Oct 2017"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:id="@+id/current_time"
                android:fontFamily="sans-serif-condensed"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 14.9"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:id="@+id/totalfinal"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="end"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Items"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:id="@+id/numberofItems"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/barcode_scanner"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/list_paymentsummary"
        android:layout_marginBottom="16dp">

    </ListView>
</LinearLayout>
